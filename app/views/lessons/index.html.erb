<h3>
  <div class="text-center">
    Lessons
    <div class="badge badge-info">
      <%= @lessons.count %>
    </div>
    <%= link_to "New lesson", new_lesson_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Id</th>
    	  
        <th>User</th>
        
        <th>Classroom</th>
        
        <th>Course</th>
        
        <th>Status</th>
        
        <th>Start</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @lessons.each do |lesson| %>
        <%= content_tag :tr, id: dom_id(lesson), class: dom_class(lesson) do %>
          <td><%= link_to lesson.id, lesson %></td>
          
            <td><%= lesson.user %></td>
          
            <td><%= lesson.classroom %></td>
          
            <td><%= lesson.course %></td>
          
            <td><%= lesson.status %></td>
          
            <td><%= lesson.start %></td>
          
          <td>
            <%= link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
