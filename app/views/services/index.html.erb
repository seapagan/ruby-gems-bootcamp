<h3>
  <div class="text-center">
    Services
    <div class="badge badge-info">
      <%= @services.count %>
    </div>
    <%= link_to "New service", new_service_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Id</th>
    	  
        <th>Name</th>
        
        <th>Duration</th>
        
        <th>Client price</th>
        
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <%= content_tag :tr, id: dom_id(service), class: dom_class(service) do %>
          <td><%= link_to service.id, service %></td>
          
            <td><%= service.name %></td>
          
            <td><%= service.duration %></td>
          
            <td><%= service.client_price %></td>
          
          <td>
            <%= link_to 'Edit', edit_service_path(service), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
