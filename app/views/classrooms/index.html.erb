<h3>
  <div class="text-center">
    Classrooms
    <div class="badge badge-info">
      <%= @classrooms.count %>
    </div>
    <%= link_to "New classroom", new_classroom_path, class: 'btn btn-primary' %>
  </div>
</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover table-sm table-light shadow">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Courses</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @classrooms.each do |classroom| %>
        <%= content_tag :tr, id: dom_id(classroom), class: dom_class(classroom) do %>
          <td><%= link_to classroom.id, classroom %></td>
          <td><%= classroom.name %></td>
          <td><%= classroom.courses.count %></td>
          <td>
            <%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
